input.w-100.mb2(
  name="name"
  value="{{.name}}"
  hx-get="/page/book/search"
  hx-target="#search_results"
  hx-include="[name='sort'], [name='order'], [name='status']"
  hx-trigger="load, change, keyup delay:200ms changed, change from:#sort_filter, change from:#sort_order, change from:#status"
)

label.w-100.w-60-ns.dib Sort by
  select.ml2#sort_filter(name="sort")
    option(value="title") Title
    option(value="author") Author
    option(value="created_at") Added date
    option(value="started_at") Started date
    option(value="finshed_at") Finshed date
  select.ml1#sort_order(name="order")
    option(value="asc") Asc
    option(value="desc") Desc

label.w-100.w-40-ns Status
  select.ml2#status(name="status")
    option(value="") All
    option(value="to-read") Backlog
    option(value="reading") Reading
    option(value="read") Finished

